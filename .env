# Environment
APP_ENV=dev
DEBUG=True
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:garima123@localhost:5432/emailscraper
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60
JWT_REFRESH_EXPIRY_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@apollo.com
SMTP_TIMEOUT=10

# Crawling
CRAWLER_USER_AGENT=Mozilla/5.0 (compatible; ApolloBot/1.0)
CRAWLER_TIMEOUT=10
CRAWLER_MAX_RETRIES=3
CRAWLER_RATE_LIMIT_PER_DOMAIN=2

# DNS
DNS_TIMEOUT=5
DNS_RETRIES=2

# SMTP Verification
SMTP_VERIFICATION_ENABLED=True
SMTP_VERIFY_TIMEOUT=30

# Feature Flags
FEATURE_ENRICHMENT_ENABLED=True
FEATURE_VERIFICATION_ENABLED=True
FEATURE_BULK_SEARCH_ENABLED=True

# External APIs
CLEARBIT_API_KEY=
PDL_API_KEY=
CRUNCHBASE_API_KEY=

# Redis
REDIS_URL=redis://localhost:6379/0

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/apollo.log

# Workers
WORKER_PROCESSES=4
TASK_QUEUE_SIZE=1000

# Abuse Detection
ABUSE_DETECTION_ENABLED=True
RISK_SCORE_THRESHOLD=0.7

# GDPR
GDPR_ENABLED=True
DATA_RETENTION_DAYS=90